{
  "problemMatcher":
  [
    {
      "owner": "cppcheck",
      "pattern":
      [
        {
          "regexp": "^([^:]+\\.(?:cpp|hpp)):(\\d+):(\\d*):\\s(style|performance|warning|error):\\s(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 5
        }
      ]
    }
  ]
}
